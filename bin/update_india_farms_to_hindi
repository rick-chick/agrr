puts "\n" + "=" * 80
puts "Update India Farm Names: English → Hindi"
puts "=" * 80
puts ""

updated = 0
farm_name_mapping.each do |eng_name, hindi_name|
  Farm.where(region: 'in', is_reference: true, name: eng_name).update_all(name: hindi_name)
  
  if Farm.where(region: 'in', is_reference: true, name: hindi_name).exists?
    puts "✅ #{eng_name} → #{hindi_name}"
    updated += 1
  end
end

puts ""
puts "=" * 80
puts "✅ Completed!"
puts "=" * 80
puts ""
puts "Updated #{updated} farms"
puts ""

