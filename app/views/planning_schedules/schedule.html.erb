<% content_for :title, t('planning_schedules.schedule.title') %>

<div class="plans-wrapper">
  <div class="plans-container">
    <!-- „Éò„ÉÉ„ÉÄ„Éº -->
    <div class="plans-header">
      <div class="plans-header-main">
        <div>
          <h1 class="plans-header-title">
            üìä <%= t('planning_schedules.schedule.title') %>
          </h1>
          <p class="plans-header-subtitle">
            <%= t('planning_schedules.schedule.subtitle') %>
          </p>
        </div>
        <div style="display: flex; gap: var(--space-2);">
          <%= link_to fields_selection_planning_schedules_path, class: "btn-secondary" do %>
            <%= t('planning_schedules.schedule.change_fields') %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- „Ç≥„É≥„Éà„É≠„Éº„É´„Éë„Éç„É´ -->
    <div class="schedule-controls">
      <div class="schedule-control-group">
        <label class="schedule-control-label">
          Ë°®Á§∫ÊúüÈñì
        </label>
        <div style="display: flex; gap: var(--space-2); align-items: center;">
          <%= link_to schedule_planning_schedules_path(farm_id: @farm.id, field_ids: @selected_fields.map { |f| f[:id] }, year: @start_year - @years_range, granularity: @granularity),
              class: "btn-secondary btn-sm",
              style: (@start_year <= @year_range.first ? "opacity: 0.5; pointer-events: none;" : "") do %>
            ‚Üê <%= @years_range %>Âπ¥ÂàÜÂâç„Å∏
          <% end %>
          <span class="schedule-year-display"><%= @start_year %>Âπ¥Â∫¶ „Äú <%= @end_year %>Âπ¥Â∫¶Ôºà<%= @years_range %>Âπ¥ÂàÜÔºâ</span>
          <%= link_to schedule_planning_schedules_path(farm_id: @farm.id, field_ids: @selected_fields.map { |f| f[:id] }, year: @start_year + @years_range, granularity: @granularity),
              class: "btn-secondary btn-sm",
              style: (@end_year >= @year_range.last ? "opacity: 0.5; pointer-events: none;" : "") do %>
            <%= @years_range %>Âπ¥ÂàÜÊ¨°„Å∏ ‚Üí
          <% end %>
        </div>
      </div>
      <div class="schedule-control-group">
        <label class="schedule-control-label">
          <%= t('planning_schedules.schedule.granularity.month') %> / <%= t('planning_schedules.schedule.granularity.quarter') %> / <%= t('planning_schedules.schedule.granularity.half') %>
        </label>
        <div style="display: flex; gap: var(--space-2);">
          <%= link_to schedule_planning_schedules_path(farm_id: @farm.id, field_ids: @selected_fields.map { |f| f[:id] }, year: @start_year, granularity: 'month'),
              class: "btn-secondary btn-sm #{'active' if @granularity == 'month'}" do %>
            <%= t('planning_schedules.schedule.granularity.month') %>
          <% end %>
          <%= link_to schedule_planning_schedules_path(farm_id: @farm.id, field_ids: @selected_fields.map { |f| f[:id] }, year: @start_year, granularity: 'quarter'),
              class: "btn-secondary btn-sm #{'active' if @granularity == 'quarter'}" do %>
            <%= t('planning_schedules.schedule.granularity.quarter') %>
          <% end %>
          <%= link_to schedule_planning_schedules_path(farm_id: @farm.id, field_ids: @selected_fields.map { |f| f[:id] }, year: @start_year, granularity: 'half'),
              class: "btn-secondary btn-sm #{'active' if @granularity == 'half'}" do %>
            <%= t('planning_schedules.schedule.granularity.half') %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Ë®àÁîªË°® -->
    <div class="schedule-table-wrapper">
      <table class="schedule-table">
        <thead>
          <tr>
            <th class="schedule-table-period-header"><%= t('planning_schedules.schedule.period_label') %></th>
            <% @selected_fields.each do |field| %>
              <th class="schedule-table-field-header">
                <%= field[:name] %><br>
                <span style="font-size: var(--font-size-base); font-weight: normal; opacity: 0.9;">
                  (<%= @farm.name %>)
                </span>
              </th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% 
            # ÂêÑÂúÉÂ†¥„Å´„Å§„ÅÑ„Å¶„ÄÅÂêÑÊ†ΩÂüπÊÉÖÂ†±„Åå„Å©„ÅÆÊúüÈñì„Å´„Åæ„Åü„Åå„Çã„Åã„Çí‰∫ãÂâç„Å´Ë®àÁÆó
            field_cultivation_data = @selected_fields.map do |field|
              field_id = field[:id]
              cultivations = @cultivations_by_field[field_id] || []
              cultivation_periods = cultivations.map do |c|
                spanning_periods = @periods.select do |p|
                  c[:start_date] <= p[:end_date] && c[:completion_date] >= p[:start_date]
                end
                start_period_index = spanning_periods.any? ? @periods.index(spanning_periods.first) : nil
                {
                  cultivation: c,
                  periods: spanning_periods,
                  start_period_index: start_period_index,
                  rowspan: spanning_periods.size
                }
              end
              { field: field, field_id: field_id, cultivation_periods: cultivation_periods }
            end
          %>
          <% @periods.each_with_index do |period, period_index| %>
            <tr>
              <td class="schedule-table-period-cell">
                <%= period[:label] %>
              </td>
              <% field_cultivation_data.each do |field_data| %>
                <% 
                  field = field_data[:field]
                  cultivation_periods = field_data[:cultivation_periods]
                  
                  # „Åì„ÅÆÊúüÈñì„Å´ÈñãÂßã„Åô„ÇãÊ†ΩÂüπÊÉÖÂ†±„ÇíÂèñÂæó
                  starting_cultivations = cultivation_periods.select do |cp|
                    cp[:start_period_index] == period_index
                  end
                  
                  # „Åì„ÅÆÊúüÈñì„Å´Á∂ôÁ∂ö„Åó„Å¶„ÅÑ„ÇãÊ†ΩÂüπÊÉÖÂ†±ÔºàÂâç„ÅÆÊúüÈñì„Åã„ÇâÁ∂ö„ÅÑ„Å¶„ÅÑ„Çã„ÇÇ„ÅÆÔºâ„ÇíÂèñÂæó
                  continuing_cultivations = cultivation_periods.select do |cp|
                    cp[:start_period_index] != nil &&
                    cp[:start_period_index] < period_index && 
                    cp[:periods].any? { |p| p == period }
                  end
                  
                  # „Åì„ÅÆÊúüÈñì„Å´Ë°®Á§∫„Åô„Åπ„ÅçÊ†ΩÂüπÊÉÖÂ†±ÔºàÈñãÂßã„Åô„Çã„ÇÇ„ÅÆ„ÅÆ„ÅøÔºâ
                  display_cultivations = starting_cultivations
                %>
                <% if display_cultivations.any? %>
                  <% 
                    # ÊúÄÂàù„ÅÆÊ†ΩÂüπÊÉÖÂ†±„Å´rowspan„ÇíË®≠ÂÆö
                    first_cp = display_cultivations.first
                    cultivation = first_cp[:cultivation]
                    crop_name = cultivation[:crop_name]
                    crop_color = get_crop_color_for_schedule(crop_name)
                  %>
                  <td class="schedule-table-cell" rowspan="<%= first_cp[:rowspan] %>" style="vertical-align: top;">
                    <div class="cultivation-items">
                      <% display_cultivations.each do |cp| %>
                        <% cultivation_item = cp[:cultivation] %>
                        <% crop_name_item = cultivation_item[:crop_name] %>
                        <% crop_color_item = get_crop_color_for_schedule(crop_name_item) %>
                        <div class="cultivation-item" style="background-color: <%= crop_color_item[:fill] %>; border-left: 4px solid <%= crop_color_item[:stroke] %>; color: <%= crop_color_item[:text] %>;">
                          <div class="cultivation-crop-name"><%= cultivation_item[:crop_name] %></div>
                          <div class="cultivation-period">
                            <%= I18n.l(cultivation_item[:start_date], format: :short) %> - 
                            <%= I18n.l(cultivation_item[:completion_date], format: :short) %>
                          </div>
                        </div>
                      <% end %>
                    </div>
                  </td>
                <% elsif continuing_cultivations.any? %>
                  <%# Á∂ôÁ∂ö‰∏≠„ÅÆÊ†ΩÂüπÊÉÖÂ†±„ÅØÂâç„ÅÆÊúüÈñì„ÅÆrowspan„ÅßË°®Á§∫„Åï„Çå„Çã„Åü„ÇÅ„ÄÅ„Åì„Åì„Åß„ÅØ„Çª„É´„Çí„Çπ„Ç≠„ÉÉ„Éó %>
                  <% else %>
                  <td class="schedule-table-cell">
                    <div class="cultivation-empty">
                      <%= t('planning_schedules.schedule.no_cultivation') %>
                    </div>
                  </td>
                  <% end %>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<style>
  .schedule-controls {
    background: var(--color-white);
    border-radius: var(--radius-lg);
    padding: var(--space-4);
    margin-bottom: var(--space-6);
    box-shadow: var(--shadow-md);
    display: flex;
    gap: var(--space-6);
    flex-wrap: wrap;
  }

  .schedule-control-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .schedule-control-label {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--text-secondary);
  }

  .schedule-year-display {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
    padding: 0 var(--space-4);
  }

  .btn-sm.active {
    background: var(--color-primary);
    color: var(--color-white);
  }

  .schedule-table-wrapper {
    background: var(--color-white);
    border-radius: var(--radius-lg);
    padding: var(--space-4);
    box-shadow: var(--shadow-md);
    overflow-x: auto;
  }

  .schedule-table {
    width: 100%;
    border-collapse: collapse;
    min-width: 1000px;
    font-size: var(--font-size-base);
  }

  .schedule-table th,
  .schedule-table td {
    padding: var(--space-5);
    border: 1px solid var(--color-gray-200);
    text-align: left;
  }

  .schedule-table-period-header,
  .schedule-table-period-cell {
    background: var(--color-gray-50);
    font-weight: var(--font-weight-medium);
    font-size: var(--font-size-base);
    min-width: 150px;
    position: sticky;
    left: 0;
    z-index: 1;
  }

  .schedule-table-field-header {
    background: var(--color-primary-light);
    color: var(--color-white);
    font-weight: var(--font-weight-bold);
    font-size: var(--font-size-base);
    text-align: center;
    min-width: 250px;
  }

  .schedule-table-cell {
    vertical-align: top;
    min-height: 120px;
  }

  .cultivation-items {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .cultivation-item {
    padding: var(--space-4);
    border-radius: var(--radius-base);
    font-size: var(--font-size-base);
    line-height: var(--line-height-relaxed);
    transition: all var(--transition-fast);
    box-shadow: var(--shadow-sm);
  }

  .cultivation-item:hover {
    box-shadow: var(--shadow-md);
    transform: translateY(-1px);
  }

  .cultivation-crop-name {
    font-weight: var(--font-weight-bold);
    font-size: var(--font-size-lg);
    margin-bottom: var(--space-2);
  }

  .cultivation-period {
    font-size: var(--font-size-base);
    opacity: 1;
  }

  .cultivation-empty {
    color: var(--text-secondary);
    font-size: var(--font-size-base);
    text-align: center;
    padding: var(--space-4);
  }
</style>

