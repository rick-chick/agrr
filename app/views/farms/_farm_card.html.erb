<div class="farm-card">
  <h3 class="farm-name"><%= farm.display_name %></h3>
  <% if farm.has_coordinates? %>
    <div class="farm-coordinates">
      📍 緯度: <%= farm.latitude %><br>
      📍 経度: <%= farm.longitude %>
    </div>
  <% else %>
    <div class="farm-coordinates">📍 位置情報が設定されていません</div>
  <% end %>
  <div class="farm-info">
    <p>圃場数: <%= farm.fields.count %>個</p>
    <p>
      <strong>天気データ:</strong>
      <span class="weather-status weather-status-<%= farm.weather_data_status %>">
        <%= farm.weather_data_status_text %>
      </span>
      <% if farm.fetching? && farm.weather_data_total_years > 0 %>
        <% if farm.weather_data_progress >= 100 %>
          <small class="info-message">データ処理完了間近です...</small>
        <% else %>
          <div class="progress-bar">
            <div class="progress-fill" data-progress="<%= farm.weather_data_progress %>" style="width: <%= farm.weather_data_progress %>%"></div>
          </div>
        <% end %>
      <% end %>
      <% if farm.failed? && farm.weather_data_last_error.present? %>
        <small class="error-message"><%= farm.weather_data_last_error.truncate(100) %></small>
      <% end %>
    </p>
  </div>
  <div class="farm-actions">
    <%= link_to "詳細", farm, class: "btn btn-small", data: { turbo_frame: "_top" } %>
    <%= link_to "圃場一覧", farm_fields_path(farm), class: "btn btn-small btn-info", data: { turbo_frame: "_top" } %>
    <%= link_to "編集", edit_farm_path(farm), class: "btn btn-small btn-secondary", data: { turbo_frame: "_top" } %>
    <%= button_to "削除", farm, method: :delete, 
                class: "btn btn-small btn-danger", 
                data: { turbo_frame: "_top" },
                form: { data: { turbo_confirm: "この農場を削除しますか？" } } %>
  </div>
</div>

