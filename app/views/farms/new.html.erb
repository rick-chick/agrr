<% content_for :title, "#{t('.title')} - AGRR" %>

<div class="page-header">
  <h1 class="page-title"><%= t('.title') %></h1>
</div>
    
    <div class="form-card">
      <%= form_with model: @farm, local: true do |form| %>
        <% if @farm.errors.any? %>
          <div class="errors">
            <h3><%= t('.errors.title', count: @farm.errors.count) %></h3>
            <ul>
              <% @farm.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        <div class="form-group">
          <%= form.label :name, t('.form.name_label'), class: "form-label" %>
          <%= form.text_field :name, class: "form-control", placeholder: t('.form.name_placeholder') %>
          <div class="form-text"><%= t('.form.name_help') %></div>
        </div>
        
        <div class="form-group">
          <label class="form-label"><%= t('.form.location_label') %></label>
          <div class="map-container">
            <div id="map" 
                 data-farm-location="<%= t('.form.map.farm_location') %>"
                 data-map-library-load-failed="<%= t('.form.map.library_load_failed') %>"
                 data-map-load-failed="<%= t('.form.map.load_failed') %>"
                 data-reload-page="<%= t('.form.map.reload_page') %>"
                 data-retry="<%= t('.form.map.retry') %>"
                 data-map-loading="<%= t('.form.map.loading') %>"></div>
            <div class="map-placeholder" id="map-placeholder">
              <div><%= t('.form.map_loading') %></div>
            </div>
          </div>
          <div class="coordinates-input">
            <div>
              <%= form.label :latitude, t('.form.latitude_label'), class: "form-label" %>
              <%= form.number_field :latitude, step: :any, class: "form-control", placeholder: t('.form.latitude_placeholder'), id: "farm_latitude" %>
              <div class="form-text"><%= t('.form.latitude_help') %></div>
            </div>
            <div>
              <%= form.label :longitude, t('.form.longitude_label'), class: "form-label" %>
              <%= form.number_field :longitude, step: :any, class: "form-control", placeholder: t('.form.longitude_placeholder'), id: "farm_longitude" %>
              <div class="form-text"><%= t('.form.longitude_help') %></div>
            </div>
          </div>
        </div>
        
        <div class="actions">
          <%= form.submit t('.form.submit'), class: "btn btn-success" %>
          <%= link_to t('.form.cancel'), farms_path, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>

