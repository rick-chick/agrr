<% content_for :title, "#{@farm.display_name} - #{t('.title')} - AGRR" %>

<div class="breadcrumb">
  <%= link_to t('.breadcrumb.farms'), farms_path, class: "breadcrumb-link" %>
  <span class="breadcrumb-separator">></span>
  <%= link_to @farm.display_name, farm_path(@farm), class: "breadcrumb-link" %>
  <span class="breadcrumb-separator">></span>
  <span class="breadcrumb-current"><%= t('.breadcrumb.current') %></span>
</div>

<div class="page-header">
  <h1 class="page-title"><%= @farm.display_name %> - <%= t('.title') %></h1>
  <%= link_to t('.new_field'), new_farm_field_path(@farm), class: "btn btn-success" %>
</div>

<% if @fields.any? %>
  <div class="fields-grid">
    <% @fields.each do |field| %>
      <div class="field-card">
        <h3 class="field-name"><%= field.display_name %></h3>
        <div class="field-actions">
          <%= link_to t('.actions.detail'), farm_field_path(@farm, field), class: "btn btn-info btn-sm" %>
          <%= link_to t('.actions.edit'), edit_farm_field_path(@farm, field), class: "btn btn-secondary btn-sm" %>
          <%= link_to t('.actions.delete'), farm_field_path(@farm, field), method: :delete, 
                      class: "btn btn-error btn-sm", 
                      data: { 
                        turbo_method: :delete,
                        turbo_confirm: t('.actions.delete_confirm')
                      } %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="empty-state">
    <div class="empty-state-icon"><%= t('.empty.icon') %></div>
    <h3><%= t('.empty.title') %></h3>
    <p><%= t('.empty.description') %></p>
    <%= link_to t('.empty.button'), new_farm_field_path(@farm), class: "btn btn-success" %>
  </div>
<% end %>