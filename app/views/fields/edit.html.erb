<% content_for :title, "#{t('.title')} - #{@farm.display_name} - AGRR" %>

<div class="breadcrumb">
  <%= link_to t('.breadcrumb.farms'), farms_path, class: "breadcrumb-link" %>
  <span class="breadcrumb-separator">></span>
  <%= link_to @farm.display_name, farm_path(@farm), class: "breadcrumb-link" %>
  <span class="breadcrumb-separator">></span>
  <%= link_to t('.breadcrumb.fields'), farm_fields_path(@farm), class: "breadcrumb-link" %>
  <span class="breadcrumb-separator">></span>
  <%= link_to @field.display_name, farm_field_path(@farm, @field), class: "breadcrumb-link" %>
  <span class="breadcrumb-separator">></span>
  <span class="breadcrumb-current"><%= t('.breadcrumb.edit') %></span>
</div>

<div class="page-header">
  <h1 class="page-title"><%= @farm.display_name %> - <%= t('.title') %></h1>
</div>

<div class="form-card">
  <%= form_with model: [@farm, @field], local: true do |form| %>
    <% if @field.errors.any? %>
      <div class="errors">
        <h3><%= t('.errors.title', count: @field.errors.count) %></h3>
        <ul>
          <% @field.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="form-group">
      <%= form.label :name, t('.form.name_label'), class: "form-label" %>
      <%= form.text_field :name, class: "form-control", placeholder: t('.form.name_placeholder') %>
      <div class="form-text"><%= t('.form.name_help') %></div>
    </div>
    
    <div class="form-group">
      <%= form.label :area, t('.form.area_label'), class: "form-label" %>
      <%= form.number_field :area, class: "form-control", placeholder: t('.form.area_placeholder'), step: "0.1", min: "0" %>
      <div class="form-text"><%= t('.form.area_help') %></div>
    </div>
    
    <div class="form-group">
      <%= form.label :daily_fixed_cost, t('.form.daily_cost_label'), class: "form-label" %>
      <%= form.number_field :daily_fixed_cost, class: "form-control", placeholder: t('.form.daily_cost_placeholder'), step: "1", min: "0" %>
      <div class="form-text"><%= t('.form.daily_cost_help') %></div>
    </div>
    
    <div class="actions">
      <%= form.submit t('.form.submit'), class: "btn btn-success" %>
      <%= link_to t('.form.cancel'), farm_field_path(@farm, @field), class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>