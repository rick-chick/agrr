<%# encoding: UTF-8 %>
<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold mb-6">栽培地域農場を編集</h1>

    <%= form_with(model: @farm, url: admin_default_farm_path, method: :patch, local: true, class: "bg-white shadow-md rounded-lg p-6") do |form| %>
      <% if @farm.errors.any? %>
        <div class="bg-red-50 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
          <strong class="font-bold">エラーがあります：</strong>
          <ul class="list-disc list-inside mt-2">
            <% @farm.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :name, "農場名", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= form.label :latitude, "緯度", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.number_field :latitude, step: 0.000001, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        <p class="text-gray-600 text-xs mt-1">-90 〜 90 の範囲で入力してください</p>
      </div>

      <div class="mb-4">
        <%= form.label :longitude, "経度", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.number_field :longitude, step: 0.000001, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        <p class="text-gray-600 text-xs mt-1">-180 〜 180 の範囲で入力してください</p>
      </div>

      <div class="flex items-center justify-between">
        <%= form.submit "更新", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        <%= link_to "キャンセル", admin_default_farm_path, class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
      </div>
    <% end %>

    <div class="mt-6">
      <%= link_to "← 農場詳細に戻る", admin_default_farm_path(@farm), class: "text-blue-500 hover:text-blue-700" %>
    </div>
  </div>
</div>

