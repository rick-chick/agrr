<%# encoding: UTF-8 %>
<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold"><%= @farm.name %></h1>
      <div class="flex gap-2">
        <%= link_to "編集", edit_admin_default_farm_path(@farm), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "削除", admin_default_farm_path(@farm), method: :delete, data: { confirm: "#{@farm.name}を削除してもよろしいですか？" }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    </div>

    <div class="bg-white shadow-md rounded-lg p-6">
      <dl class="grid grid-cols-1 gap-4">
        <div>
          <dt class="font-semibold text-gray-600">農場名</dt>
          <dd class="mt-1 text-gray-900"><%= @farm.name %></dd>
        </div>
        
        <div>
          <dt class="font-semibold text-gray-600">緯度</dt>
          <dd class="mt-1 text-gray-900"><%= @farm.latitude %></dd>
        </div>
        
        <div>
          <dt class="font-semibold text-gray-600">経度</dt>
          <dd class="mt-1 text-gray-900"><%= @farm.longitude %></dd>
        </div>
        
        <div>
          <dt class="font-semibold text-gray-600">所有者</dt>
          <dd class="mt-1">
            <% if @farm.user.anonymous? %>
              <div class="flex items-center gap-2">
                <span class="text-gray-900">アノニマスユーザー</span>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                  ID: <%= @farm.user_id %>
                </span>
              </div>
            <% else %>
              <div class="flex items-center gap-2">
                <span class="text-gray-900"><%= @farm.user.name %></span>
                <span class="text-gray-600 text-sm">(<%= @farm.user.email %>)</span>
              </div>
            <% end %>
          </dd>
        </div>
        
        <div>
          <dt class="font-semibold text-gray-600">栽培地域として使用</dt>
          <dd class="mt-1">
            <% if @farm.is_default %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                はい
              </span>
            <% else %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                いいえ
              </span>
            <% end %>
          </dd>
        </div>
        
        <div>
          <dt class="font-semibold text-gray-600">天気データステータス</dt>
          <dd class="mt-1 text-gray-900"><%= @farm.weather_data_status_text %></dd>
        </div>
        
        <div>
          <dt class="font-semibold text-gray-600">作成日</dt>
          <dd class="mt-1 text-gray-900"><%= l(@farm.created_at, format: :long) %></dd>
        </div>
        
        <div>
          <dt class="font-semibold text-gray-600">更新日</dt>
          <dd class="mt-1 text-gray-900"><%= l(@farm.updated_at, format: :long) %></dd>
        </div>
      </dl>
    </div>

    <div class="mt-6">
      <%= link_to "← 農場一覧に戻る", admin_default_farms_path, class: "text-blue-500 hover:text-blue-700" %>
    </div>
  </div>
</div>

