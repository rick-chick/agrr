<% content_for :title, t('.title') %>
<% content_for :description, t('.description') %>

<!-- Hero Section -->
  <section class="hero">
    <div class="hero-content">
      <h1 class="hero-title"><%= t('.hero.title') %></h1>
      <p class="hero-subtitle">
        <%= t('.hero.subtitle_html').html_safe %>
      </p>
      <div class="hero-buttons">
        <%= link_to t('.hero.cta_button'), public_plans_path, class: "btn btn-primary btn-lg hero-button-style" %>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="features">
    <h2 class="section-title"><%= t('.features.title') %></h2>
    <p class="section-subtitle"><%= t('.features.subtitle') %></p>
    
    <div class="features-grid">
      <%= link_to public_plans_path, class: "feature-card feature-card-link" do %>
        <div class="feature-icon"><%= t('.features.weather.icon') %></div>
        <h3 class="feature-title"><%= t('.features.weather.title') %></h3>
        <p class="feature-description">
          <%= t('.features.weather.description') %>
        </p>
      <% end %>

      <%= link_to public_plans_path, class: "feature-card feature-card-link" do %>
        <div class="feature-icon"><%= t('.features.ai.icon') %></div>
        <h3 class="feature-title"><%= t('.features.ai.title') %></h3>
        <p class="feature-description">
          <%= t('.features.ai.description') %>
        </p>
      <% end %>

      <%= link_to public_plans_path, class: "feature-card feature-card-link" do %>
        <div class="feature-icon"><%= t('.features.optimization.icon') %></div>
        <h3 class="feature-title"><%= t('.features.optimization.title') %></h3>
        <p class="feature-description">
          <%= t('.features.optimization.description') %>
        </p>
      <% end %>

      <%= link_to logged_in? ? farms_path : about_path, class: "feature-card feature-card-link" do %>
        <div class="feature-icon"><%= t('.features.field_management.icon') %></div>
        <h3 class="feature-title"><%= t('.features.field_management.title') %></h3>
        <p class="feature-description">
          <%= t('.features.field_management.description') %>
        </p>
      <% end %>

      <%= link_to public_plans_path, class: "feature-card feature-card-link" do %>
        <div class="feature-icon"><%= t('.features.growth_prediction.icon') %></div>
        <h3 class="feature-title"><%= t('.features.growth_prediction.title') %></h3>
        <p class="feature-description">
          <%= t('.features.growth_prediction.description') %>
        </p>
      <% end %>

      <%= link_to about_path, class: "feature-card feature-card-link" do %>
        <div class="feature-icon"><%= t('.features.cloud.icon') %></div>
        <h3 class="feature-title"><%= t('.features.cloud.title') %></h3>
        <p class="feature-description">
          <%= t('.features.cloud.description') %>
        </p>
      <% end %>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta">
    <h2 class="cta-title"><%= t('.cta.title') %></h2>
    <p class="cta-description">
      <%= t('.cta.description_html').html_safe %>
    </p>
    <div class="cta-buttons">
      <%= link_to t('.cta.button_primary'), public_plans_path, class: "btn btn-primary btn-lg hero-button-style" %>
      <%= link_to t('.cta.button_secondary'), about_path, class: "btn btn-lg hero-button-outline-style" %>
    </div>
  </section>
