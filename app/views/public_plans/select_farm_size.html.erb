<%# encoding: UTF-8 %>
<div class="free-plans-wrapper">
  <div class="free-plans-container">
    <!-- Compact Header with Progress -->
    <div class="compact-header-card">
      <div class="compact-header-title">
        <span class="title-icon">🌱</span>
        <span class="title-text">作付け計画</span>
      </div>
      <div class="compact-progress">
        <div class="compact-step completed">
          <div class="step-number">✓</div>
          <span class="step-label">地域</span>
        </div>
        <div class="compact-step-divider completed"></div>
        <div class="compact-step active">
          <div class="step-number">2</div>
          <span class="step-label">サイズ</span>
        </div>
        <div class="compact-step-divider"></div>
        <div class="compact-step">
          <div class="step-number">3</div>
          <span class="step-label">作物</span>
        </div>
      </div>
    </div>
    
    <!-- Summary Card -->
    <div class="enhanced-summary-card">
      <div class="enhanced-summary-items">
        <div class="enhanced-summary-row">
          <div class="enhanced-summary-icon">🌍</div>
          <div class="enhanced-summary-content">
            <div class="enhanced-summary-label">地域</div>
            <div class="enhanced-summary-value"><%= @farm.name %></div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Content Card -->
    <div class="content-card">
      <h2 class="content-card-title">📏 農場のサイズを選択してください</h2>
      <p class="content-card-subtitle">あなたの農場の広さに最も近いものを選択してください</p>
      
      <div class="enhanced-grid">
        <% @farm_sizes.each do |farm_size| %>
          <%= link_to select_crop_public_plans_path(farm_size_id: farm_size[:id]), class: "enhanced-selection-card" do %>
            <div class="enhanced-card-icon">🏡</div>
            <div class="enhanced-card-title"><%= farm_size[:name] %></div>
            <div class="enhanced-card-highlight"><%= farm_size[:area_sqm] %>㎡</div>
            <div class="enhanced-card-detail"><%= farm_size[:description] %></div>
          <% end %>
        <% end %>
      </div>
      
      <div class="action-buttons">
        <%= link_to public_plans_path, class: "btn-white" do %>
          ← 地域選択に戻る
        <% end %>
      </div>
    </div>
  </div>
</div>

