<%# encoding: UTF-8 %>
<div class="public-plans-wrapper">
  <div class="free-plans-container">
    <!-- Compact Header with Progress -->
    <div class="compact-header-card">
      <div class="compact-header-title">
        <span class="title-icon">üå±</span>
        <span class="title-text"><%= t('public_plans.title') %></span>
      </div>
      <div class="compact-progress">
        <div class="compact-step completed">
          <div class="step-number"><%= t('public_plans.steps.completed') %></div>
          <span class="step-label"><%= t('public_plans.steps.region') %></span>
        </div>
        <div class="compact-step-divider completed"></div>
        <div class="compact-step completed">
          <div class="step-number"><%= t('public_plans.steps.completed') %></div>
          <span class="step-label"><%= t('public_plans.steps.size') %></span>
        </div>
        <div class="compact-step-divider completed"></div>
        <div class="compact-step active">
          <div class="step-number">3</div>
          <span class="step-label"><%= t('public_plans.steps.crop') %></span>
        </div>
      </div>
    </div>
    
    <!-- Summary Card -->
    <div class="enhanced-summary-card">
      <div class="enhanced-summary-items">
        <div class="enhanced-summary-row">
          <div class="enhanced-summary-icon">üåç</div>
          <div class="enhanced-summary-content">
            <div class="enhanced-summary-label"><%= t('.summary.region') %></div>
            <div class="enhanced-summary-value"><%= @farm.name %></div>
          </div>
        </div>
        <div class="enhanced-summary-row">
          <div class="enhanced-summary-icon">üè°</div>
          <div class="enhanced-summary-content">
            <div class="enhanced-summary-label"><%= t('.summary.farm_size') %></div>
            <div class="enhanced-summary-value"><%= @farm_size[:name] %> (<%= @farm_size[:area_sqm] %>„é°)</div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Content Card -->
    <div class="content-card">
      <h2 class="content-card-title"><%= t('.title') %></h2>
      <p class="content-card-subtitle"><%= t('.subtitle') %></p>
      
      <%= form_with url: public_plans_path, method: :post, id: "cropForm", data: { turbo: false } do |f| %>
        <div class="enhanced-grid">
          <% @crops.each do |crop| %>
            <div class="crop-item">
              <input type="checkbox" 
                     name="crop_ids[]" 
                     value="<%= crop.id %>" 
                     id="crop_<%= crop.id %>" 
                     class="crop-check">
              <label for="crop_<%= crop.id %>" class="crop-card">
                <div class="crop-emoji">ü•¨</div>
                <div class="crop-name"><%= crop.name %></div>
                <% if crop.variety.present? %>
                  <div class="crop-variety"><%= crop.variety %></div>
                <% end %>
                <div class="check-mark">‚úì</div>
              </label>
            </div>
          <% end %>
        </div>
        
        <div class="bottom-spacer"></div>
      <% end %>
    </div>
  </div>
</div>

<div class="fixed-bottom-bar">
  <div class="fixed-bottom-bar-container">
    <div class="fixed-bottom-bar-content">
      <div class="fixed-bottom-bar-left">
        <%= link_to select_farm_size_public_plans_path(farm_id: @farm.id), class: "btn-white back-button" do %>
          <%= t('.bottom_bar.back_button') %>
        <% end %>
        <div class="selection-counter-group">
          <span class="counter-label"><%= t('.bottom_bar.selected_label') %></span>
          <div id="counter" class="counter-badge">0</div>
          <span class="counter-unit"><%= t('.bottom_bar.selected_unit') %></span>
        </div>
      </div>
      <button type="submit" form="cropForm" id="submitBtn" class="btn-gradient submit-button" disabled>
        <%= t('.bottom_bar.submit_button') %>
      </button>
    </div>
    <div id="hint" class="hint-message">
      <%= t('.bottom_bar.hint') %>
    </div>
  </div>
</div>

<% content_for :javascripts do %>
  <%= javascript_include_tag "crop_selection", defer: true %>
<% end %>

