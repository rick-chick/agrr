<%# encoding: UTF-8 %>
<div class="public-plans-wrapper">
  <div class="free-plans-container">
    <!-- Compact Header with Progress -->
    <div class="compact-header-card">
      <div class="compact-header-title">
        <span class="title-icon">🌱</span>
        <span class="title-text">作付け計画</span>
      </div>
      <div class="compact-progress">
        <div class="compact-step completed">
          <div class="step-number">✓</div>
          <span class="step-label">地域</span>
        </div>
        <div class="compact-step-divider completed"></div>
        <div class="compact-step completed">
          <div class="step-number">✓</div>
          <span class="step-label">サイズ</span>
        </div>
        <div class="compact-step-divider completed"></div>
        <div class="compact-step active">
          <div class="step-number">3</div>
          <span class="step-label">作物</span>
        </div>
      </div>
    </div>
    
    <!-- Summary Card -->
    <div class="enhanced-summary-card">
      <div class="enhanced-summary-items">
        <div class="enhanced-summary-row">
          <div class="enhanced-summary-icon">🌍</div>
          <div class="enhanced-summary-content">
            <div class="enhanced-summary-label">地域</div>
            <div class="enhanced-summary-value"><%= @farm.name %></div>
          </div>
        </div>
        <div class="enhanced-summary-row">
          <div class="enhanced-summary-icon">🏡</div>
          <div class="enhanced-summary-content">
            <div class="enhanced-summary-label">農場サイズ</div>
            <div class="enhanced-summary-value"><%= @farm_size[:name] %> (<%= @farm_size[:area_sqm] %>㎡)</div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Content Card -->
    <div class="content-card">
      <h2 class="content-card-title">🌾 栽培したい作物を選択してください</h2>
      <p class="content-card-subtitle">複数選択可能です。カードをクリックして選択してください。</p>
      
      <%= form_with url: public_plans_path, method: :post, id: "cropForm", data: { turbo: false } do |f| %>
        <div class="enhanced-grid">
          <% @crops.each do |crop| %>
            <div class="crop-item">
              <input type="checkbox" 
                     name="crop_ids[]" 
                     value="<%= crop.id %>" 
                     id="crop_<%= crop.id %>" 
                     class="crop-check">
              <label for="crop_<%= crop.id %>" class="crop-card">
                <div style="font-size: 3rem; margin-bottom: 1rem;">🥬</div>
                <div style="font-size: 1.25rem; font-weight: 700; color: #2d3748; margin-bottom: 0.5rem; word-wrap: break-word; overflow-wrap: break-word; line-height: 1.3;"><%= crop.name %></div>
                <% if crop.variety.present? %>
                  <div style="font-size: 0.875rem; color: #718096; word-wrap: break-word; overflow-wrap: break-word; line-height: 1.4;"><%= crop.variety %></div>
                <% end %>
                <div class="check-mark">✓</div>
              </label>
            </div>
          <% end %>
        </div>
        
        <!-- Spacer -->
        <div style="height: 200px;"></div>
      <% end %>
    </div>
  </div>
</div>

<!-- Fixed Bottom Bar -->
<div class="fixed-bottom-bar">
  <div class="fixed-bottom-bar-container">
    <div class="fixed-bottom-bar-content">
      <div class="fixed-bottom-bar-left">
        <%= link_to select_farm_size_public_plans_path(farm_id: @farm.id), class: "btn-white back-button" do %>
          ← 戻る
        <% end %>
        <div class="selection-counter-group">
          <span class="counter-label">選択済み</span>
          <div id="counter" class="counter-badge">0</div>
          <span class="counter-unit">種類</span>
        </div>
      </div>
      <button type="submit" form="cropForm" id="submitBtn" class="btn-gradient submit-button" disabled>
        ✓ 選択した作物で計画を作成
      </button>
    </div>
    <div id="hint" class="hint-message">
      ⚠️ 作物を1つ以上選択してください
    </div>
  </div>
</div>

<!-- Styles are loaded from app/assets/stylesheets/features/public-plans.css via layout -->
<!-- JavaScript is loaded from app/javascript/crop_selection.js via application.js -->

