<%# app/views/public_plans/results/_header.html.erb %>
<%# 作付け計画完成画面のヘッダー・サマリー表示 %>

<div class="gantt-results-header">
  <div class="gantt-results-header-main">
    <div class="gantt-results-header-icon">🎉</div>
    <h1 class="gantt-results-header-title"><%= t('public_plans.results.header.title') %></h1>
    <div class="gantt-results-header-badge"><%= t('public_plans.results.header.badge') %></div>
  </div>
  
  <div class="gantt-results-header-summary">
    <div class="gantt-summary-item">
      <span class="gantt-summary-icon">🌍</span>
      <span class="gantt-summary-label"><%= t('public_plans.results.header.region') %></span>
      <span class="gantt-summary-value"><%= cultivation_plan.farm.name %></span>
    </div>
    
    <div class="gantt-summary-item">
      <span class="gantt-summary-icon">📏</span>
      <span class="gantt-summary-label"><%= t('public_plans.results.header.total_area') %></span>
      <span class="gantt-summary-value"><%= number_with_delimiter(cultivation_plan.total_area.to_i) %>㎡</span>
    </div>
    
    <div class="gantt-summary-item">
      <span class="gantt-summary-icon">🏞️</span>
      <span class="gantt-summary-label"><%= t('public_plans.results.header.field_count') %></span>
      <span class="gantt-summary-value"><%= t('public_plans.results.header.field_count_value', count: cultivation_plan.field_cultivations.count) %></span>
    </div>
    
    <div class="gantt-summary-item">
      <span class="gantt-summary-icon">💰</span>
      <span class="gantt-summary-label"><%= t('public_plans.results.header.total_cost') %></span>
      <span class="gantt-summary-value">¥<%= number_with_delimiter(cultivation_plan.total_cost&.to_i || 0) %></span>
    </div>
    
    <% if cultivation_plan.total_revenue.present? %>
    <div class="gantt-summary-item">
      <span class="gantt-summary-icon">📈</span>
      <span class="gantt-summary-label"><%= t('public_plans.results.header.total_revenue') %></span>
      <span class="gantt-summary-value">¥<%= number_with_delimiter(cultivation_plan.total_revenue.to_i) %></span>
    </div>
    
    <div class="gantt-summary-item">
      <span class="gantt-summary-icon">💎</span>
      <span class="gantt-summary-label"><%= t('public_plans.results.header.total_profit') %></span>
      <span class="gantt-summary-value">¥<%= number_with_delimiter(cultivation_plan.total_profit&.to_i || 0) %></span>
    </div>
    <% end %>
  </div>
  
  <div class="gantt-results-header-subtitle">
    <%= t('public_plans.results.header.subtitle', count: cultivation_plan.field_cultivations.count) %>
  </div>
</div>

