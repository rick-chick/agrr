<%# app/views/public_plans/results/_detail_panel.html.erb %>
<%# 詳細パネル（モーダル/展開パネル） - JavaScriptで表示制御 %>

<div class="detail-panel" id="detailPanel" style="display: none;">
  <%# オーバーレイ（モバイル用） %>
  <div class="detail-panel-overlay" id="panelOverlay"></div>
  
  <%# パネル本体 %>
  <div class="detail-panel-container">
    <%# ヘッダー %>
    <div class="detail-panel-header">
      <h3 id="panelTitle" class="detail-panel-title" data-loading-text="<%= t('public_plans.results.detail.loading') %>">
        <span class="panel-title-icon">🏞️</span>
        <span class="panel-title-text"><%= t('public_plans.results.detail.loading') %></span>
      </h3>
      <button class="detail-panel-close" id="closePanelBtn" type="button" aria-label="<%= t('common.close') %>">
        <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
    
    <%# タブナビゲーション %>
    <div class="detail-panel-tabs">
      <button class="detail-tab-btn active" data-tab="info" type="button">
        <span class="tab-icon">📅</span>
        <span class="tab-text">基本情報</span>
      </button>
      <button class="detail-tab-btn" data-tab="temperature" type="button">
        <span class="tab-icon">🌡️</span>
        <span class="tab-text">気温分析</span>
      </button>
      <button class="detail-tab-btn" data-tab="stages" type="button">
        <span class="tab-icon">📊</span>
        <span class="tab-text">ステージ</span>
      </button>
    </div>
    
    <%# コンテンツエリア %>
    <div class="detail-panel-content" id="panelContent">
      <%# ローディング表示 %>
      <div class="detail-loading" id="panelLoading">
        <div class="loading-spinner"></div>
        <p class="loading-text"><%= t('public_plans.results.detail.loading_data') %></p>
      </div>
      
      <%# タブコンテンツ（JavaScriptで動的に切り替え） %>
      <div id="tab-info-content" class="detail-tab-content active" style="display: none;">
        <%= render 'public_plans/results/detail_info_tab' %>
      </div>
      
      <div id="tab-temperature-content" class="detail-tab-content" style="display: none;">
        <%= render 'public_plans/results/detail_temperature_tab' %>
      </div>
      
      <div id="tab-stages-content" class="detail-tab-content" style="display: none;">
        <%= render 'public_plans/results/detail_stages_tab' %>
      </div>
    </div>
  </div>
</div>

