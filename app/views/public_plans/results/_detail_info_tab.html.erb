<%# app/views/public_plans/results/_detail_info_tab.html.erb %>
<%# 基本情報タブ - JavaScriptからデータを注入 %>

<div class="info-tab-content">
  <%# 基本情報グリッド %>
  <div class="info-grid">
    <div class="info-card">
      <div class="info-card-icon">🏞️</div>
      <div class="info-card-label"><%= t('public_plans.results.info.field') %></div>
      <div class="info-card-value" data-field="field_name">-</div>
    </div>
    
    <div class="info-card">
      <div class="info-card-icon">🌱</div>
      <div class="info-card-label"><%= t('public_plans.results.info.crop') %></div>
      <div class="info-card-value" data-field="crop_name">-</div>
    </div>
    
    <div class="info-card">
      <div class="info-card-icon">📏</div>
      <div class="info-card-label"><%= t('public_plans.results.info.area') %></div>
      <div class="info-card-value" data-field="area">-</div>
    </div>
    
    <div class="info-card">
      <div class="info-card-icon">📅</div>
      <div class="info-card-label"><%= t('public_plans.results.info.planting_date') %></div>
      <div class="info-card-value" data-field="start_date">-</div>
    </div>
    
    <div class="info-card">
      <div class="info-card-icon">📅</div>
      <div class="info-card-label"><%= t('public_plans.results.info.harvest_date') %></div>
      <div class="info-card-value" data-field="completion_date">-</div>
    </div>
    
    <div class="info-card">
      <div class="info-card-icon">⏱️</div>
      <div class="info-card-label"><%= t('public_plans.results.info.cultivation_days') %></div>
      <div class="info-card-value" data-field="cultivation_days">-</div>
    </div>
    
    <div class="info-card">
      <div class="info-card-icon">🌡️</div>
      <div class="info-card-label"><%= t('public_plans.results.info.gdd') %></div>
      <div class="info-card-value" data-field="gdd">-</div>
    </div>
    
    <div class="info-card">
      <div class="info-card-icon">💰</div>
      <div class="info-card-label"><%= t('public_plans.results.info.estimated_cost') %></div>
      <div class="info-card-value" data-field="estimated_cost">-</div>
    </div>
  </div>
  
  <%# ステージタイムライン %>
  <div class="stages-timeline-section">
    <h4 class="timeline-title"><%= t('public_plans.results.info.stages_title') %></h4>
    <div class="stages-timeline" data-field="stages_timeline">
      <%# JavaScriptで動的に生成 %>
      <div class="timeline-placeholder">
        <p><%= t('public_plans.results.info.stages_loading') %></p>
      </div>
    </div>
  </div>
</div>

