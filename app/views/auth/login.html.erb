<% content_for :title, t('auth.login.title') %>

<div class="login-container">
  <div class="login-logo">AGRR</div>
  <div class="subtitle"><%= t('auth.login.subtitle') %></div>
  
  <% if flash[:alert] %>
    <div class="alert"><%= flash[:alert] %></div>
  <% end %>
  
  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
  
  <% if ENV['GOOGLE_CLIENT_ID'].present? && ENV['GOOGLE_CLIENT_SECRET'].present? %>
    <div class="google-btn-wrapper">
      <%= button_to "/auth/google_oauth2", method: :post, class: "google-btn", data: { turbo: false } do %>
        <div class="google-icon">
          <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
          </svg>
        </div>
        <%= t('auth.login.google_button') %>
      <% end %>
    </div>
  <% else %>
    <div class="oauth-error">
      <div class="oauth-error-icon">⚠️</div>
      <h3><%= t('auth.login.oauth_not_configured_title') %></h3>
      <p><%= t('auth.login.oauth_not_configured_description') %></p>
    </div>
  <% end %>
  
  <% if Rails.env.development? %>
    <% mock_login_return_to = (session[:return_to] || params[:return_to]).presence %>
    <div class="dev-login-section">
      <h3 class="dev-login-title"><%= t('auth.login.dev_login_title') %></h3>
      
      <div class="dev-login-buttons">
        <a href="<%= auth_test_mock_login_as_path('developer', return_to: mock_login_return_to) %>" class="mock-btn mock-btn-developer">
          <div class="mock-btn-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
              <path d="M5.854 4.854a.5.5 0 1 0-.708-.708l-3.5 3.5a.5.5 0 0 0 0 .708l3.5 3.5a.5.5 0 0 0 .708-.708L2.707 8l3.147-3.146zm4.292 0a.5.5 0 0 1 .708-.708l3.5 3.5a.5.5 0 0 1 0 .708l-3.5 3.5a.5.5 0 0 1-.708-.708L13.293 8l-3.147-3.146z"/>
            </svg>
          </div>
          <%= t('auth.login.dev_login_as_developer') %>
        </a>
        
        <a href="<%= auth_test_mock_login_as_path('farmer', return_to: mock_login_return_to) %>" class="mock-btn mock-btn-farmer">
          <div class="mock-btn-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
              <path d="M3 2.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3.5 4a.5.5 0 0 0 0 1h9a.5.5 0 0 0 0-1h-9zm0 2a.5.5 0 0 0 0 1h9a.5.5 0 0 0 0-1h-9zm0 2a.5.5 0 0 0 0 1h9a.5.5 0 0 0 0-1h-9zM4 10.5a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 0-1h-7a.5.5 0 0 0-.5.5zm0 2a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 0-1h-7a.5.5 0 0 0-.5.5z"/>
            </svg>
          </div>
          <%= t('auth.login.dev_login_as_farmer') %>
        </a>
        
        <a href="<%= auth_test_mock_login_as_path('researcher', return_to: mock_login_return_to) %>" class="mock-btn mock-btn-researcher">
          <div class="mock-btn-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
              <path d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0zM9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1zM4 5.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 0 1h-3a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5z"/>
            </svg>
          </div>
          <%= t('auth.login.dev_login_as_researcher') %>
        </a>
      </div>
      
      <p class="dev-note">
        <%= t('auth.login.dev_login_note') %>
      </p>
    </div>
  <% end %>
  
  <p class="auth-footer">
    <%= t('auth.login.footer_note') %>
  </p>
</div>

