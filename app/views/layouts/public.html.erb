  <style>
    /* Layout-specific adjustments using design tokens */
    body {
      padding-top: 80px; /* ナビゲーションバーの高さ分の余白 */
      min-height: 100vh;
    }
  </style>
</head>
<body>
  <%= render "shared/navbar" %>

  <%= yield %>
  
  <%= render "shared/footer" %>
</body>
</html>

