<div class="form-card">
  <%= form_with(model: @crop) do |f| %>
    <% if @crop.errors.any? %>
      <div class="errors">
        <h3><%= pluralize(@crop.errors.count, 'error') %> prohibited this crop from being saved:</h3>
        <ul>
          <% @crop.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, '名前', class: 'form-label' %>
      <%= f.text_field :name, required: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :variety, '品種', class: 'form-label' %>
      <%= f.text_field :variety, class: 'form-control' %>
      <div class="form-text">品種名を入力してください（任意）</div>
    </div>

    <div class="form-group">
      <div class="checkbox-group">
        <%= f.check_box :is_reference, disabled: !admin_user?, class: 'form-control' %>
        <%= f.label :is_reference, '参照作物（管理者のみ）', class: 'form-label' %>
      </div>
      <% unless admin_user? %>
        <div class="form-text">参照作物の設定は管理者のみ可能です</div>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit class: 'btn btn-success' %>
      <%= link_to 'キャンセル', @crop.persisted? ? crop_path(@crop) : crops_path, class: 'btn' %>
    </div>
  <% end %>
</div>
