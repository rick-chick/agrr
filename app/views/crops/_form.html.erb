<div class="form-card">
  <%= form_with(model: @crop) do |f| %>
    <% if @crop.errors.any? %>
      <div class="errors">
        <h3><%= pluralize(@crop.errors.count, 'error') %> prohibited this crop from being saved:</h3>
        <ul>
          <% @crop.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, '名前', class: 'form-label' %>
      <%= f.text_field :name, required: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :variety, '品種', class: 'form-label' %>
      <%= f.text_field :variety, class: 'form-control' %>
      <div class="form-text">品種名を入力してください（任意）</div>
    </div>

    <div class="form-group">
      <%= f.label :area_per_unit, '単位あたりの面積（㎡）', class: 'form-label' %>
      <%= f.number_field :area_per_unit, step: :any, class: 'form-control' %>
      <div class="form-text">1単位あたりの栽培面積を入力してください（任意）</div>
    </div>

    <div class="form-group">
      <%= f.label :revenue_per_area, '面積あたりの収益（円/㎡）', class: 'form-label' %>
      <%= f.number_field :revenue_per_area, step: :any, class: 'form-control' %>
      <div class="form-text">1㎡あたりの収益を入力してください（任意）</div>
    </div>

    <div class="form-group">
      <button type="button" id="ai-save-crop-btn" class="btn btn-ai" data-controller="crop-ai">
        🤖 AIで作物情報を取得・保存
      </button>
      <div id="ai-save-status" class="form-text d-none"></div>
      <div class="form-text">作物名を入力してボタンをクリックすると、AIが面積・収益などの情報を自動的に取得して保存します</div>
    </div>

    <!-- AI処理中の広告ポップアップ -->
    <div id="ad-popup-overlay" class="ad-popup-overlay">
      <div class="ad-popup-container">
        <div class="ad-popup-status">
          <div class="ad-popup-status-title">
            🤖 AIで作物情報を取得中...
          </div>
          <p class="ad-popup-status-message">しばらくお待ちください。処理が完了すると作物詳細画面に自動で移動します。</p>
        </div>

        <div class="ad-popup-content">
          <div class="ad-popup-label">
            スポンサー広告
          </div>
          <div class="ad-popup-placeholder">
            <div class="ad-popup-ad-content">
              <div class="ad-popup-ad-title">広告スペース</div>
              <div class="ad-popup-ad-dimensions">728 x 250</div>
              <p class="ad-popup-ad-description">
                Google AdSense や他の広告ネットワークのコードを配置<br>
                （AI処理中に表示される広告エリア）<br>
                <br>
                例：<br>
                <code>&lt;ins class="adsbygoogle" ...&gt;&lt;/ins&gt;</code>
              </p>
            </div>
          </div>
        </div>

        <div class="ad-popup-progress">
          <p class="ad-popup-progress-text">AI処理中...</p>
          <div class="ad-popup-progress-bar">
            <div class="ad-popup-progress-fill"></div>
          </div>
        </div>
      </div>
    </div>

    <% if admin_user? %>
      <div class="form-group">
        <div class="checkbox-group">
          <%= f.check_box :is_reference, class: 'form-control' %>
          <%= f.label :is_reference, '参照作物（管理者のみ）', class: 'form-label' %>
        </div>
      </div>
    <% end %>

    <div class="form-section">
      <h3 class="section-title">生育ステージ</h3>
      
      <div id="crop-stages">
        <%= f.fields_for :crop_stages do |stage_form| %>
          <%= render 'crop_stage_fields', f: stage_form, crop: @crop %>
        <% end %>
      </div>

      <% if !@crop.is_reference || admin_user? %>
        <div class="form-group">
          <button type="button" id="add-crop-stage" class="btn btn-secondary">+ 生育ステージを追加</button>
        </div>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit class: 'btn btn-success' %>
      <%= link_to 'キャンセル', @crop.persisted? ? crop_path(@crop) : crops_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
