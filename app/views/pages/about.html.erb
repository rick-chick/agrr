<% content_for :title, "#{t('pages.about.title')} | AGRR" %>
<% content_for :description, t('pages.about.description', default: "AGRRは気象データとAIを活用した農業作付け計画支援システムです。主な機能、特徴、開発コンセプトについてご紹介します。") %>

<div class="page-content-container">
  <h1 class="page-header"><%= t('.heading') %></h1>
  
  <div class="page-content">
    <section class="page-section">
      <h2 class="page-section-title"><%= t('.what_is.title') %></h2>
      <p class="page-section-content"><%= t('.what_is.content') %></p>
    </section>

    <section class="page-section">
      <h2 class="page-section-title"><%= t('.features_section.title') %></h2>
      <div class="feature-grid">
        <% t('.features_section.items').each do |item| %>
          <div class="feature-card">
            <h3 class="feature-card-title"><%= item[:icon] %> <%= item[:title] %></h3>
            <p class="feature-card-content"><%= item[:description] %></p>
          </div>
        <% end %>
      </div>
    </section>

    <section class="page-section">
      <h2 class="page-section-title"><%= t('.characteristics.title') %></h2>
      <p class="page-section-content"><%= t('.characteristics.intro') %></p>
      <ul class="page-list">
        <% t('.characteristics.items').each do |item| %>
          <li><%= item.html_safe %></li>
        <% end %>
      </ul>
    </section>

    <section class="page-section">
      <h2 class="page-section-title"><%= t('.development.title') %></h2>
      <p class="page-section-content"><%= t('.development.paragraph1') %></p>
      <p class="page-section-content"><%= t('.development.paragraph2') %></p>
    </section>

    <section class="highlight-box">
      <h2 class="highlight-box-title"><%= t('.contact_section.title') %></h2>
      <p class="highlight-box-content"><%= t('.contact_section.message') %></p>
      <%= link_to t('.contact_section.button_text'), contact_path, class: "highlight-box-button" %>
    </section>

    <p class="page-footer-text"><%= t('.copyright') %></p>
  </div>
</div>

