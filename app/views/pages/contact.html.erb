<% content_for :title, "#{t('pages.contact.title')} | AGRR" %>
<% content_for :description, t('pages.contact.description', default: "AGRRへのお問い合わせはこちらから。サービスに関するご質問、ご要望、技術的なサポートなど、お気軽にご連絡ください。") %>

<div class="page-content-container">
  <h1 class="page-header"><%= t('.heading') %></h1>
  
  <div class="page-content">
    <p class="page-section-content"><%= t('.intro') %></p>

    <div class="info-box">
      <h2 class="info-box-title"><%= t('.email_section_title') %></h2>
      <p class="info-box-content"><%= t('.email_intro') %></p>
      <p class="info-box-content text-xl">
        <a href="mailto:support@agrr.net" class="info-box-link">support@agrr.net</a>
      </p>
      <p class="text-sm text-secondary"><%= t('.email_note') %></p>
    </div>

    <div class="info-box">
      <h2 class="info-box-title"><%= t('.notes_title') %></h2>
      <ul class="page-list">
        <% t('.notes').each do |note| %>
          <li><%= note %></li>
        <% end %>
      </ul>
    </div>

    <div class="warning-box">
      <h3 class="warning-box-title"><%= t('.faq_title') %></h3>
      <p class="warning-box-content"><%= t('.faq_intro') %></p>
      <ul class="warning-box-list">
        <% t('.faq_items').each do |item| %>
          <li><%= item %></li>
        <% end %>
      </ul>
    </div>

    <div class="text-center mt-10">
      <p class="text-secondary"><%= t('.footer_message') %></p>
    </div>
  </div>
</div>

