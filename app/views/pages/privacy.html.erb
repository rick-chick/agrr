    <p style="margin-bottom: 20px;"><%= t('.section7.content') %></p>

    <h2 style="font-size: 1.5rem; margin-top: 40px; margin-bottom: 20px; color: #2E7D32;"><%= t('.section8.title') %></h2>
    <p style="margin-bottom: 20px;"><%= t('.section8.content_html', contact_link: link_to(t('.section8.contact_link_text'), contact_path, style: 'color: #2E7D32; text-decoration: underline;')).html_safe %></p>

    <p style="margin-top: 40px; text-align: right; color: #666;"><%= t('.last_updated') %></p>
  </div>
</div>

