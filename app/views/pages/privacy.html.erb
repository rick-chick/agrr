<div class="container" style="max-width: 900px; margin: 40px auto; padding: 20px;">
  <h1 style="font-size: 2rem; margin-bottom: 30px; border-bottom: 3px solid #4CAF50; padding-bottom: 10px;"><%= t('.heading') %></h1>
  
  <div style="line-height: 1.8; color: #333;">
    <p style="margin-bottom: 20px;"><%= t('.intro_html').html_safe %></p>

    <h2 style="font-size: 1.5rem; margin-top: 40px; margin-bottom: 20px; color: #2E7D32;"><%= t('.section1.title') %></h2>
    <p style="margin-bottom: 15px;"><%= t('.section1.intro') %></p>
    <ul style="margin-left: 20px; margin-bottom: 20px;">
      <% t('.section1.items').each do |item| %>
        <li style="margin-bottom: 10px;"><%= item %></li>
      <% end %>
    </ul>

    <h2 style="font-size: 1.5rem; margin-top: 40px; margin-bottom: 20px; color: #2E7D32;"><%= t('.section2.title') %></h2>
    <p style="margin-bottom: 15px;"><%= t('.section2.intro') %></p>
    <ul style="margin-left: 20px; margin-bottom: 20px;">
      <% t('.section2.items').each do |item| %>
        <li style="margin-bottom: 10px;"><%= item %></li>
      <% end %>
    </ul>

    <h2 style="font-size: 1.5rem; margin-top: 40px; margin-bottom: 20px; color: #2E7D32;"><%= t('.section3.title') %></h2>
    <p style="margin-bottom: 20px;"><%= t('.section3.intro') %></p>
    <ul style="margin-left: 20px; margin-bottom: 20px;">
      <% t('.section3.items').each do |item| %>
        <li style="margin-bottom: 10px;"><%= item %></li>
      <% end %>
    </ul>

    <h2 style="font-size: 1.5rem; margin-top: 40px; margin-bottom: 20px; color: #2E7D32;"><%= t('.section4.title') %></h2>
    <p style="margin-bottom: 20px;"><%= t('.section4.content_html').html_safe %></p>

    <h2 style="font-size: 1.5rem; margin-top: 40px; margin-bottom: 20px; color: #2E7D32;"><%= t('.section5.title') %></h2>
    <p style="margin-bottom: 20px;"><%= t('.section5.content_html').html_safe %></p>

    <h2 style="font-size: 1.5rem; margin-top: 40px; margin-bottom: 20px; color: #2E7D32;"><%= t('.section6.title') %></h2>
    <p style="margin-bottom: 20px;"><%= t('.section6.content') %></p>

