<%= form_with model: @agricultural_task,
              local: true,
              data: { controller: 'agricultural-task-form' } do |f| %>
  <% if @agricultural_task.errors.any? %>
    <div class="alert alert-danger">
      <h3><%= t('errors.template.header', count: @agricultural_task.errors.count, model: AgriculturalTask.model_name.human) %></h3>
      <ul>
        <% @agricultural_task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, AgriculturalTask.human_attribute_name(:name) %>
    <%= f.text_field :name, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :description, AgriculturalTask.human_attribute_name(:description) %>
    <%= f.text_area :description, class: 'form-control', rows: 5 %>
  </div>

  <div class="form-group">
    <%= f.label :time_per_sqm, AgriculturalTask.human_attribute_name(:time_per_sqm) %>
    <%= f.number_field :time_per_sqm, class: 'form-control', step: 0.01, min: 0 %>
  </div>

  <div class="form-group">
    <%= f.label :weather_dependency, AgriculturalTask.human_attribute_name(:weather_dependency) %>
    <%= f.select :weather_dependency,
                 options_for_select([
                   [t('agricultural_tasks.show.weather_dependency_low'), 'low'],
                   [t('agricultural_tasks.show.weather_dependency_medium'), 'medium'],
                   [t('agricultural_tasks.show.weather_dependency_high'), 'high']
                 ], @agricultural_task.weather_dependency),
                 { include_blank: true },
                 class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :required_tools, AgriculturalTask.human_attribute_name(:required_tools) %>
    <%= f.text_area :required_tools,
                     value: Array(@agricultural_task.required_tools).join("\n"),
                     class: 'form-control',
                     rows: 4 %>
    <small class="form-text text-muted"><%= t('agricultural_tasks.form.required_tools_hint', default: '改行で複数入力できます') %></small>
  </div>

  <div class="form-group">
    <%= f.label :skill_level, AgriculturalTask.human_attribute_name(:skill_level) %>
    <%= f.select :skill_level,
                 options_for_select([
                   [t('agricultural_tasks.show.skill_level_beginner'), 'beginner'],
                   [t('agricultural_tasks.show.skill_level_intermediate'), 'intermediate'],
                   [t('agricultural_tasks.show.skill_level_advanced'), 'advanced']
                 ], @agricultural_task.skill_level),
                 { include_blank: true },
                 class: 'form-control' %>
  </div>

  <% if defined?(@crop_cards) %>
    <section class="crop-selection-section"
             data-controller="crop-selector">
      <header class="crop-selection-section__header">
        <h2 class="crop-selection-section__title"><%= t('agricultural_tasks.form.crop_selection.title') %></h2>
        <p class="crop-selection-section__description"><%= t('agricultural_tasks.form.crop_selection.description') %></p>
      </header>

      <% if @crop_cards.any? %>
        <div class="crop-selection-grid" data-crop-selector-target="grid">
          <% @crop_cards.each do |card| %>
            <% crop = card[:crop] %>
            <article class="crop-selection-card <%= 'is-selected' if card[:selected] %>"
                     data-role="crop-card"
                     data-crop-id="<%= crop.id %>"
                     data-selected="<%= card[:selected] %>"
                     data-crop-selector-target="card"
                     data-action="click->crop-selector#toggle">
              <header class="crop-selection-card__header">
                <h3 class="crop-selection-card__title"><%= crop.name %></h3>
                <span class="crop-selection-card__badge <%= crop.is_reference? ? 'is-reference' : 'is-user' %>">
                  <%= crop.is_reference? ? t('agricultural_tasks.form.crop_selection.reference_badge') : t('agricultural_tasks.form.crop_selection.user_badge') %>
                </span>
              </header>
              <% if crop.variety.present? %>
                <p class="crop-selection-card__variety"><%= crop.variety %></p>
              <% end %>
              <% if card[:selected] %>
                <span class="crop-selection-card__state"><%= t('agricultural_tasks.form.crop_selection.selected_state') %></span>
              <% end %>
            </article>
          <% end %>
        </div>
      <% else %>
        <p class="crop-selection-empty"><%= t('agricultural_tasks.form.crop_selection.empty') %></p>
      <% end %>

      <div class="crop-selection-inputs"
           data-crop-selector-target="inputContainer">
        <% Array(@selected_crop_ids).each do |crop_id| %>
          <%= hidden_field_tag 'selected_crop_ids[]', crop_id %>
        <% end %>
      </div>
    </section>
  <% end %>

  <% if admin_user? %>
    <div class="form-group form-check">
      <%= f.check_box :is_reference,
                      class: 'form-check-input',
                      data: { action: 'change->agricultural-task-form#toggleReferenceFlag' } %>
      <%= f.label :is_reference, AgriculturalTask.human_attribute_name(:is_reference), class: 'form-check-label' %>
    </div>
  <% end %>

  <div class="form-actions">
    <% submit_key = @agricultural_task.persisted? ? 'submit_update' : 'submit_create' %>
    <%= f.submit t("agricultural_tasks.form.#{submit_key}", default: (@agricultural_task.persisted? ? '作業を更新' : '作業を作成')), class: 'btn btn-primary' %>
    <%= link_to t('helpers.cancel', default: 'キャンセル'), agricultural_tasks_path, class: 'btn btn-secondary' %>
  </div>
<% end %>

