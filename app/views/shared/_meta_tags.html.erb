<meta charset="UTF-8">
<meta name="viewport" content="width=device-width,initial-scale=1">
<title><%= content_for?(:title) ? yield(:title) : t('meta.default.title') %></title>
<meta name="description" content="<%= content_for?(:description) ? yield(:description) : t('meta.default.description') %>">
<meta name="keywords" content="<%= t('meta.default.keywords') %>">
<meta name="author" content="AGRR">

<!-- Language and Locale -->
<meta name="language" content="<%= I18n.locale %>">
<% if Rails.env.production? %>
  <link rel="alternate" hreflang="ja" href="<%= url_for(locale: :ja, only_path: false) %>">
  <link rel="alternate" hreflang="x-default" href="<%= url_for(locale: :ja, only_path: false) %>">
<% else %>
  <link rel="alternate" hreflang="ja" href="<%= url_for(locale: :ja, only_path: false) %>">
  <link rel="alternate" hreflang="us" href="<%= url_for(locale: :us, only_path: false) %>">
  <link rel="alternate" hreflang="in" href="<%= url_for(locale: :in, only_path: false) %>">
  <link rel="alternate" hreflang="x-default" href="<%= url_for(locale: :ja, only_path: false) %>">
<% end %>

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website">
<meta property="og:url" content="<%= request.original_url %>">
<meta property="og:title" content="<%= content_for?(:title) ? yield(:title) : t('meta.default.title') %>">
<meta property="og:description" content="<%= content_for?(:description) ? yield(:description) : t('meta.default.og_description') %>">
<meta property="og:site_name" content="AGRR">
<meta property="og:locale" content="<%= if Rails.env.production?
  'ja_JP'
else
  case I18n.locale.to_s
  when 'ja' then 'ja_JP'
  when 'us' then 'en_US'
  when 'in' then 'hi_IN'
  else 'ja_JP'
  end
end %>">

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="<%= content_for?(:title) ? yield(:title) : t('meta.default.title') %>">
<meta name="twitter:description" content="<%= content_for?(:description) ? yield(:description) : t('meta.default.og_description') %>">

<!-- Favicon -->
<link rel="icon" type="image/x-icon" href="/favicon.ico">

<!-- Google Analytics 4 -->
<% if Rails.env.production? %>
  <%= javascript_include_tag "https://www.googletagmanager.com/gtag/js?id=G-WNLSL6W4ZT", async: true, nonce: true %>
  <script nonce="<%= content_security_policy_nonce %>">
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-WNLSL6W4ZT', {
      'anonymize_ip': true,
      'cookie_flags': 'SameSite=None;Secure'
    });
  </script>
<% end %>

<!-- Google AdSense -->
<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-7498903562014256" crossorigin="anonymous" nonce="<%= content_security_policy_nonce %>"></script>

<%= csrf_meta_tags %>
<%= csp_meta_tag %>

