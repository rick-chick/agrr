<footer class="footer">
  <div class="footer-container">
    <div class="footer-grid">
      <!-- About Section -->
      <div>
        <h3 class="footer-section-title"><%= t('shared.navbar.brand') %></h3>
        <p class="footer-section-description">
          <%= simple_format(t('shared.footer.brand_description'), {}, wrapper_tag: "span") %>
        </p>
      </div>
      
      <!-- Links Section -->
      <div>
        <h3 class="footer-section-title"><%= t('shared.footer.services') %></h3>
        <ul class="footer-links">
          <li class="footer-link-item">
            <%= link_to t('shared.footer.create_plan'), public_plans_path, class: 'footer-link' %>
          </li>
          <li class="footer-link-item">
            <%= link_to t('shared.footer.about'), about_path, class: 'footer-link' %>
          </li>
        </ul>
      </div>
      
      <!-- Legal Section -->
      <div>
        <h3 class="footer-section-title"><%= t('shared.footer.legal') %></h3>
        <ul class="footer-links">
          <li class="footer-link-item">
            <%= link_to t('shared.footer.privacy_policy'), privacy_path, class: 'footer-link' %>
          </li>
          <li class="footer-link-item">
            <%= link_to t('shared.footer.terms'), terms_path, class: 'footer-link' %>
          </li>
        </ul>
      </div>
      
      <!-- Contact Section -->
      <div>
        <h3 class="footer-section-title"><%= t('shared.footer.contact_title') %></h3>
        <ul class="footer-links">
          <li class="footer-link-item">
            <%= link_to t('shared.footer.contact_form'), contact_path, class: 'footer-link' %>
          </li>
          <li class="footer-link-item">
            <a href="mailto:support@agrr.net" class="footer-link">support@agrr.net</a>
          </li>
        </ul>
      </div>
    </div>
    
    <!-- Copyright -->
    <div class="footer-divider">
      <p class="footer-copyright">
        <%= t('shared.footer.copyright', year: Time.current.year) %>
      </p>
    </div>
  </div>
</footer>

