<footer style="background-color: #2E7D32; color: white; margin-top: 60px; padding: 40px 0 20px 0;">
  <div class="container" style="max-width: 1200px; margin: 0 auto; padding: 0 20px;">
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 30px; margin-bottom: 30px;">
      <!-- About Section -->
      <div>
        <h3 style="font-size: 1.2rem; margin-bottom: 15px; font-weight: bold;"><%= t('shared.navbar.brand') %></h3>
        <p style="font-size: 0.9rem; line-height: 1.6; color: #e8f5e9;">
          <%= simple_format(t('shared.footer.brand_description'), {}, wrapper_tag: "span") %>
        </p>
      </div>
      
      <!-- Links Section -->
      <div>
        <h3 style="font-size: 1.2rem; margin-bottom: 15px; font-weight: bold;"><%= t('shared.footer.services') %></h3>
        <ul style="list-style: none; padding: 0; margin: 0;">
          <li style="margin-bottom: 10px;">
            <%= link_to t('shared.footer.create_plan'), public_plans_path, style: 'color: #e8f5e9; text-decoration: none; font-size: 0.9rem;' %>
          </li>
          <li style="margin-bottom: 10px;">
            <%= link_to t('shared.footer.about'), about_path, style: 'color: #e8f5e9; text-decoration: none; font-size: 0.9rem;' %>
          </li>
        </ul>
      </div>
      
      <!-- Legal Section -->
      <div>
        <h3 style="font-size: 1.2rem; margin-bottom: 15px; font-weight: bold;"><%= t('shared.footer.legal') %></h3>
        <ul style="list-style: none; padding: 0; margin: 0;">
          <li style="margin-bottom: 10px;">
            <%= link_to t('shared.footer.privacy_policy'), privacy_path, style: 'color: #e8f5e9; text-decoration: none; font-size: 0.9rem;' %>
          </li>
          <li style="margin-bottom: 10px;">
            <%= link_to t('shared.footer.terms'), terms_path, style: 'color: #e8f5e9; text-decoration: none; font-size: 0.9rem;' %>
          </li>
        </ul>
      </div>
      
      <!-- Contact Section -->
      <div>
        <h3 style="font-size: 1.2rem; margin-bottom: 15px; font-weight: bold;"><%= t('shared.footer.contact_title') %></h3>
        <ul style="list-style: none; padding: 0; margin: 0;">
          <li style="margin-bottom: 10px;">
            <%= link_to t('shared.footer.contact_form'), contact_path, style: 'color: #e8f5e9; text-decoration: none; font-size: 0.9rem;' %>
          </li>
          <li style="margin-bottom: 10px;">
            <a href="mailto:support@agrr.net" style="color: #e8f5e9; text-decoration: none; font-size: 0.9rem;">support@agrr.net</a>
          </li>
        </ul>
      </div>
    </div>
    
    <!-- Copyright -->
    <div style="border-top: 1px solid #4CAF50; padding-top: 20px; text-align: center;">
      <p style="margin: 0; font-size: 0.85rem; color: #c8e6c9;">
        <%= t('shared.footer.copyright', year: Time.current.year) %>
      </p>
    </div>
  </div>
</footer>

