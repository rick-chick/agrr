<div class="form-card" 
     data-pest-form
     data-i18n-control-methods-title="<%= t('pests.form.control_methods_title') %>"
     data-i18n-method-type-label="<%= t('pests.form.method_type_label') %>"
     data-i18n-select-method-type="<%= t('pests.form.select_method_type') %>"
     data-i18n-method-types-chemical="<%= t('pests.form.method_types.chemical') %>"
     data-i18n-method-types-biological="<%= t('pests.form.method_types.biological') %>"
     data-i18n-method-types-cultural="<%= t('pests.form.method_types.cultural') %>"
     data-i18n-method-types-physical="<%= t('pests.form.method_types.physical') %>"
     data-i18n-method-name-label="<%= t('pests.form.method_name_label') %>"
     data-i18n-method-description-label="<%= t('pests.form.method_description_label') %>"
     data-i18n-timing-hint-label="<%= t('pests.form.timing_hint_label') %>"
     data-i18n-remove-method="<%= t('pests.form.remove_method') %>">
  <%= form_with(model: @pest) do |f| %>
    <% if @pest.errors.any? %>
      <div class="errors">
        <h3><%= t('pests.form.errors.title', count: @pest.errors.count) %></h3>
        <ul>
          <% @pest.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, t('pests.form.name_label'), class: 'form-label' %>
      <%= f.text_field :name, required: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <button type="button" id="ai-save-pest-btn" class="btn btn-ai" 
              data-controller="pest-ai"
              data-is-new-record="<%= @pest.new_record? %>"
              data-pest-id="<%= @pest.persisted? ? @pest.id : '' %>"
              data-enter-name="<%= t('js.pest_ai.enter_name') %>"
              data-fetching="<%= t('js.pest_ai.fetching') %>"
              data-button-fetching="<%= t('js.pest_ai.button_fetching') %>"
              data-created-success="<%= t('js.pest_ai.created_success', name: '%{name}') %>"
              data-updated-success="<%= t('js.pest_ai.updated_success', name: '%{name}') %>"
              data-fetch-failed="<%= t('js.pest_ai.fetch_failed') %>"
              data-network-error="<%= t('js.pest_ai.network_error') %>"
              data-button-idle="<%= t('pests.form.ai_button') %>">
      </button>
      <div id="ai-save-status" class="form-text d-none"></div>
      <div class="form-text"><%= t('pests.form.ai_help') %></div>
    </div>

    <!-- AI処理中の広告ポップアップ -->
    <div id="ad-popup-overlay" class="ad-popup-overlay">
      <div class="ad-popup-container">
        <div class="ad-popup-status">
          <div class="ad-popup-status-title">
            <%= t('pests.form.ai_processing_title') %>
          </div>
          <p class="ad-popup-status-message"><%= t('pests.form.ai_processing_message') %></p>
        </div>

        <div class="ad-popup-progress">
          <p class="ad-popup-progress-text"><%= t('pests.form.ai_progress_text') %></p>
          <div class="ad-popup-progress-bar">
            <div class="ad-popup-progress-fill"></div>
          </div>
        </div>
        
        <!-- Google AdSense 広告 -->
        <%= render 'shared/adsense_display_ad', ad_slot: '0000000000', ad_format: 'rectangle' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :name_scientific, t('pests.form.name_scientific_label'), class: 'form-label' %>
      <%= f.text_field :name_scientific, class: 'form-control' %>
      <div class="form-text"><%= t('pests.form.name_scientific_help') %></div>
    </div>

    <div class="form-group">
      <%= f.label :family, t('pests.form.family_label'), class: 'form-label' %>
      <%= f.text_field :family, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :order, t('pests.form.order_label'), class: 'form-label' %>
      <%= f.text_field :order, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description, t('pests.form.description_label'), class: 'form-label' %>
      <%= f.text_area :description, rows: 4, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :occurrence_season, t('pests.form.occurrence_season_label'), class: 'form-label' %>
      <%= f.text_field :occurrence_season, class: 'form-control' %>
      <div class="form-text"><%= t('pests.form.occurrence_season_help') %></div>
    </div>

    <% if defined?(@crop_cards) %>
      <section class="form-section crop-selection-section"
               data-controller="crop-selector"
               data-crop-selector-input-name-value="crop_ids[]">
        <h3 class="form-section-title"><%= t('pests.form.crops_title') %></h3>
        <div class="form-text"><%= t('pests.form.crops_help') %></div>

        <% if @crop_cards.any? %>
          <div class="crop-selection-grid" data-crop-selector-target="grid">
            <% @crop_cards.each do |card| %>
              <% crop = card[:crop] %>
              <article class="crop-selection-card <%= 'is-selected' if card[:selected] %>"
                       data-role="crop-card"
                       data-crop-id="<%= crop.id %>"
                       data-selected="<%= card[:selected] %>"
                       data-crop-selector-target="card"
                       data-action="click->crop-selector#toggle">
                <header class="crop-selection-card__header">
                  <h4 class="crop-selection-card__title"><%= crop.name %></h4>
                  <span class="crop-selection-card__badge <%= crop.is_reference? ? 'is-reference' : 'is-user' %>">
                    <%= crop.is_reference? ? t('agricultural_tasks.form.crop_selection.reference_badge') : t('agricultural_tasks.form.crop_selection.user_badge') %>
                  </span>
                </header>
                <% if crop.variety.present? %>
                  <p class="crop-selection-card__variety"><%= crop.variety %></p>
                <% end %>
                <% if card[:selected] %>
                  <span class="crop-selection-card__state"><%= t('agricultural_tasks.form.crop_selection.selected_state') %></span>
                <% end %>
              </article>
            <% end %>
          </div>
        <% else %>
          <p class="form-text"><%= t('pests.form.no_crops_available') %></p>
        <% end %>

        <div class="crop-selection-inputs" data-crop-selector-target="inputContainer">
          <% Array(@selected_crop_ids).each do |crop_id| %>
            <%= hidden_field_tag 'crop_ids[]', crop_id %>
          <% end %>
        </div>
      </section>
    <% end %>

    <div class="form-section">
      <h3 class="form-section-title"><%= t('pests.form.temperature_profile_title') %></h3>
      <%= f.fields_for :pest_temperature_profile do |temp_form| %>
        <div class="form-group">
          <%= temp_form.label :base_temperature, t('pests.form.base_temperature_label'), class: 'form-label' %>
          <%= temp_form.number_field :base_temperature, step: :any, class: 'form-control' %>
          <div class="form-text"><%= t('pests.form.base_temperature_help') %></div>
        </div>

        <div class="form-group">
          <%= temp_form.label :max_temperature, t('pests.form.max_temperature_label'), class: 'form-label' %>
          <%= temp_form.number_field :max_temperature, step: :any, class: 'form-control' %>
          <div class="form-text"><%= t('pests.form.max_temperature_help') %></div>
        </div>

        <%= temp_form.hidden_field :_destroy, value: false %>
      <% end %>
    </div>

    <div class="form-section">
      <h3 class="form-section-title"><%= t('pests.form.thermal_requirement_title') %></h3>
      <%= f.fields_for :pest_thermal_requirement do |thermal_form| %>
        <div class="form-group">
          <%= thermal_form.label :required_gdd, t('pests.form.required_gdd_label'), class: 'form-label' %>
          <%= thermal_form.number_field :required_gdd, step: :any, class: 'form-control' %>
          <div class="form-text"><%= t('pests.form.required_gdd_help') %></div>
        </div>

        <div class="form-group">
          <%= thermal_form.label :first_generation_gdd, t('pests.form.first_generation_gdd_label'), class: 'form-label' %>
          <%= thermal_form.number_field :first_generation_gdd, step: :any, class: 'form-control' %>
          <div class="form-text"><%= t('pests.form.first_generation_gdd_help') %></div>
        </div>

        <%= thermal_form.hidden_field :_destroy, value: false %>
      <% end %>
    </div>

    <div class="form-section">
      <h3 class="form-section-title"><%= t('pests.form.control_methods_title') %></h3>
      <div id="control-methods-list">
        <%= f.fields_for :pest_control_methods do |method_form| %>
          <div class="control-method-fields nested-fields">
            <div class="nested-fields-header">
              <h4 class="nested-title"><%= t('pests.form.control_methods_title') %></h4>
              <% unless method_form.object.new_record? %>
                <%= method_form.hidden_field :id %>
                <%= method_form.hidden_field :_destroy, value: false, class: 'destroy-flag' %>
              <% end %>
              <button type="button" class="btn btn-error btn-sm remove-control-method">
                <%= t('pests.form.remove_method') %>
              </button>
            </div>

            <div class="form-group">
              <%= method_form.label :method_type, t('pests.form.method_type_label'), class: 'form-label' %>
              <%= method_form.select :method_type, 
                  options_for_select([
                    [t('pests.form.method_types.chemical'), 'chemical'],
                    [t('pests.form.method_types.biological'), 'biological'],
                    [t('pests.form.method_types.cultural'), 'cultural'],
                    [t('pests.form.method_types.physical'), 'physical']
                  ], method_form.object.method_type), 
                  { include_blank: t('pests.form.select_method_type') }, 
                  { class: 'form-control' } %>
            </div>

            <div class="form-group">
              <%= method_form.label :method_name, t('pests.form.method_name_label'), class: 'form-label' %>
              <%= method_form.text_field :method_name, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= method_form.label :description, t('pests.form.method_description_label'), class: 'form-label' %>
              <%= method_form.text_area :description, rows: 3, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= method_form.label :timing_hint, t('pests.form.timing_hint_label'), class: 'form-label' %>
              <%= method_form.text_field :timing_hint, class: 'form-control' %>
              <div class="form-text"><%= t('pests.form.timing_hint_help') %></div>
            </div>
          </div>
        <% end %>
      </div>
      <button type="button" id="add-control-method" class="btn btn-secondary btn-sm">
        <%= t('pests.form.add_control_method') %>
      </button>
    </div>

    <% if admin_user? %>
      <div class="form-group">
        <div class="checkbox-group">
          <%= f.check_box :is_reference, class: 'form-control' %>
          <%= f.label :is_reference, t('pests.form.is_reference_label'), class: 'form-label' %>
        </div>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit t("pests.form.submit_#{@pest.new_record? ? 'create' : 'update'}"), class: 'btn btn-success' %>
      <%= link_to t('pests.form.cancel'), @pest.persisted? ? pest_path(@pest) : pests_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>


